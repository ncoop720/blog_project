<p id="notice"><%= notice %></p>

<div class="panel panel-primary">
    <div class="panel-heading">
    	<%= image_tag @post.user.avatar.url, class: "thumbnail" %>
      <i>
      	<%= link_to @post.user.username, user_posts_path(name: @post.user.username) %>
      	<%= @post.created_at.strftime("posted on %m/%d/%Y at %I:%M%p") %>
      </i>
      <h3 class="panel-title"><%= @post.title %></h3>
    </div>
    <div class="panel-body">
      <%= @post.blog_entry.html_safe %>
    </div>
</div>

<div id="comments">
	<div class="row">
		<div class="col-md-3 col-sm-2 col-xs-1"></div>
		<div class="col-md-6 col-sm-8 col-xs-10">
			<%= render "comments/form", comment: @comment %>
			<% @post.comments.each do |comment| %>
				<div class="panel panel-info">
				  <div class="panel-heading">

				  	<%= image_tag comment.user.avatar.url, class: "thumbnail" %>

					  <i>
					  	<%= link_to comment.user.username, user_posts_path(name: comment.user.username) %>
					  	<%= comment.created_at.strftime("replied on %m/%d/%Y at %I:%M%p") %>
					  </i>
					</div>
				  <div class="panel-body">
				    <%= comment.comment_entry.html_safe %>
				  </div>
				</div>
			<% end %>
		</div>
		<div class="col-md-3 col-sm-2 col-xs-1"></div>
	</div>
</div>

<div class="pager">
	<div class="btn-group" role="group">
		<%= link_to 'Edit Post', edit_post_path(@post), class: "btn btn-primary btn-lg" %>
		<%= link_to 'Back to Index', posts_path, class: "btn btn-primary btn-lg" %>
	</div>
</div>
